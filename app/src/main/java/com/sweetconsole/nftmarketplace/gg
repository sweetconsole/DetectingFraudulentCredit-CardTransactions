package com.sweetconsole.nftmarketplace

import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.Button
import android.widget.EditText
import android.widget.TextView
import android.widget.Toast
import com.google.firebase.Firebase
import com.google.firebase.firestore.firestore

class MainActivity : AppCompatActivity() {
    private var db = Firebase.firestore

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        val editName: EditText = findViewById(R.id.editTextText)
        val editBio: EditText = findViewById(R.id.editTextText2)
        val editId: EditText = findViewById(R.id.editTextText3)

        val button1: Button = findViewById(R.id.button)
        val button2: Button = findViewById(R.id.button3)

        val text: TextView = findViewById(R.id.textView)

        button1.setOnClickListener {
            val name = editName.text.toString().trim()
            val bio = editBio.text.toString().trim()
            val id = editId.text.toString().trim()

            val author = hashMapOf(
                "name" to name,
                "bio" to bio
            )

            db.collection("authors").document(id)
                .set(author)
                .addOnSuccessListener {
                    Toast.makeText(this, "Success", Toast.LENGTH_SHORT).show()
                }
                .addOnFailureListener {
                    Toast.makeText(this, "Failed", Toast.LENGTH_SHORT).show()
                }
        }

        button2.setOnClickListener {
            db.collection("authors")
                .get()
                .addOnSuccessListener {result ->
                    Toast.makeText(this, "Success", Toast.LENGTH_SHORT).show()

                    for (document in result) {
                        text.text = document.data.toString()
                    }
                }
                .addOnFailureListener {
                    Toast.makeText(this, "Failed", Toast.LENGTH_SHORT).show()
                }
        }
    }
}