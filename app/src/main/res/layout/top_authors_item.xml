<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_bg"
    android:padding="20dp">

    <ImageView
        android:id="@+id/topCreatorsItemAuthorAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/van_gogh_avatar"
        android:background="@drawable/corners_rounded_30dp"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topCreatorsItemAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/grey"
        android:text="@string/top_creators_item_authors_name"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/work_sans_semi_bold"
        app:layout_constraintStart_toEndOf="@+id/topCreatorsItemAuthorAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topCreatorsItemTotalSalesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        android:text="@string/top_creators_item_total_sales_title"
        android:textColor="@color/light_grey"
        android:textSize="13sp"
        android:fontFamily="@font/work_sans_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topCreatorsItemAuthorAvatar"
        app:layout_constraintTop_toBottomOf="@+id/topCreatorsItemAuthorName" />

    <TextView
        android:id="@+id/topCreatorsItemTotalSalesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        android:text="@string/top_creators_item_total_sales_value"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/space_mono_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topCreatorsItemTotalSalesTitle"
        app:layout_constraintTop_toBottomOf="@+id/topCreatorsItemAuthorName" />

</androidx.constraintlayout.widget.ConstraintLayout>